{{!
    @template aiplacement_aipsample/placement_ui

    Template to display summarise button for the course assist.

    Context variables required for this template:
    * none

    Example context (json):
    {
        "actions": [
            {
                "title": "summarise",
                "tooltip": "summarise_tooltips, aiplacement_placementui",
                "cmid": 1
            }
        ]
    }
}}
<div class="aipsample-placement-ui">
        <button class="btn btn-outline-secondary"
                type="button"
                data-toggle="tooltip"
                data-html="true"
                data-action="run"
                title="{{title}}"
        >
            <span class="sparkles-icon">
                {{#pix}} sparkles, aiplacement_aipsample {{/pix}}
            </span>
            <span class="sparkles-icon white">
                {{#pix}} sparkles-white, aiplacement_aipsample {{/pix}}
            </span>
            {{title}}
        </button>
    <div class="response" data-region="response">
    </div>
</div>
{{#js}}
    require(['aiplacement_aipsample/placement'], function(Placement) {
        const AI = new Placement({{userid}}, {{contextid}});
    });
{{/js}}
